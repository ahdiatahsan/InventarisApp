<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.inventarisapp.InputActivity">

    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_rectangle"
        android:fontFamily="@font/poppins_semibold"
        android:text="DAFTAR"
        android:textColor="@color/white"
        app:backgroundTint="@drawable/selected_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtKeterangan" />

    <TextView
        android:id="@+id/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Input Data Barang"
        android:textColor="@color/black_custom"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/abu_abu"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Nama Barang"
        android:inputType="textPersonName"
        android:textColor="@color/abu_abu"
        android:textColorHint="@color/abu_abu"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeaderText" />

    <EditText
        android:id="@+id/txtJumlah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/abu_abu"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Jumlah"
        android:inputType="number"
        android:textColor="@color/abu_abu"
        android:textColorHint="@color/abu_abu"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNama" />

    <EditText
        android:id="@+id/txtSatuan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/abu_abu"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Satuan"
        android:inputType="textPersonName"
        android:textColor="@color/abu_abu"
        android:textColorHint="@color/abu_abu"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJumlah" />

    <EditText
        android:id="@+id/txtTanggal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/abu_abu"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Tanggal Masuk Barang"
        android:inputType="date"
        android:textColor="@color/abu_abu"
        android:textColorHint="@color/abu_abu"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioKondisi" />

    <RadioGroup
        android:id="@+id/radioKondisi"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/txtSatuan">

        <RadioButton
            android:id="@+id/layakPakai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:buttonTint="@color/abu_abu"
            android:fontFamily="@font/poppins"
            android:text="Layak Pakai"
            android:checked="true"
            android:textColor="@color/abu_abu" />

        <RadioButton
            android:id="@+id/tidakLayak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6pt"
            android:layout_marginLeft="6pt"
            android:buttonTint="@color/abu_abu"
            android:fontFamily="@font/poppins"
            android:text="Tidak Layak Pakai"
            android:textColor="@color/abu_abu" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="Kondisi :"
        android:textColor="@color/abu_abu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSatuan" />

    <EditText
        android:id="@+id/txtKeterangan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/abu_abu"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Keterangan"
        android:maxLines="3"
        android:lines="3"
        android:inputType="textMultiLine"
        android:textColor="@color/abu_abu"
        android:textColorHint="@color/abu_abu"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTanggal" />

</androidx.constraintlayout.widget.ConstraintLayout>